@model IList<ShareVM.ProductVm>

@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/product.css" />

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card">
                            <img class="card-img-top" src="~/img/main-image/@product.Image" alt="Card image cap" />
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="/home/product/@product.Id" title="View Product">@product.Name</a>
                                </h4>
                                <div class="row">
                                    <div class="col">
                                        <p class="btn btn-danger btn-block">@product.Price</p>
                                    </div>
                                    <div class="col">
                                        <a href="#" class="btn btn-success btn-block">Add to cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
