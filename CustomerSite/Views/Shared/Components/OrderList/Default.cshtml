@model IList<ShareVM.OrderVm>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6 d-flex align-items-center">
            <h4><strong>Order #@item.Id</strong></h4>
        </div>
        <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
            <div class="col-3 col-sm-3 col-md-6 text-md-center d-flex align-items-center" style="padding-top: 30px">
                <h6>
                    <strong>Total: <span class="text-muted">@item.orders.Select(x => x.totalPrice).Sum() VND</span></strong>
                </h6>
            </div>
            <div class="col-3 col-sm-3 col-md-6 text-md-center d-flex align-items-center" style="padding-top: 30px">
                <a class="btn btn-primary " asp-action="orderDetail" asp-controller="Account" asp-route-id="@item.Id"><span class="badge badge-success" >Detail</span></a>
            </div>
        </div>
    </div>
    <hr />
}
