<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CustomerSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="@ViewData["css"]" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>

<body>
    <div class="main-Nav">
        <nav class="navbar navbar-expand-md navbar-light bg-light">
            <a href="~/" class="navbar-brand">RookieAssignment</a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav">
                    <a href="/home/index" class="nav-item nav-link active">Home</a>
                    @await Component.InvokeAsync("BrandMenu")
                    @await Component.InvokeAsync("CategoryMenu")
                </div>
                <div class="navbar-nav">
                    @{
                        string query = (ViewData["username"] ?? string.Empty) as string;
                    }
                    @if (!string.IsNullOrEmpty(query))
                    {
                        <button type="button" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-cart" viewBox="0 0 16 16">
                                <path
                                    d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                            </svg>
                            <span class="badge badge-light">4</span>
                        </button>
                        <a href="#" class="nav-item nav-link mr-2">@ViewData["username"]</a>
                        <a href="~/account/logout" class="nav-item nav-link mr-2">Logout</a>
                    }
                    else
                    {
                        <a asp-controller="account" asp-action="register" class="nav-item nav-link mr-2">Register</a>
                        <a asp-controller="account" asp-action="index" class="nav-item nav-link mr-2">Login</a>
                    }
                </div>
            </div>
        </nav>
    </div>
    <div class="container">

        <main role="main" class="pb-3 mt-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CustomerSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src= "~/@ViewData["js"]" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
