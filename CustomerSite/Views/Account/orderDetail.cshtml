@model IList<ShareVM.OrderDetailVm>

@foreach (var item in @Model)
{
    <div class="row">
        <div class="col-12 col-sm-12 col-md-2 text-center">
            <img class="img-responsive" src="@item.Image" alt="prewiew" width="120" height="80" />
        </div>
        <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
            <h4 class="product-name"><strong>Brand: </strong>@item.BrandName</h4>
            <h4 class="product-name"><strong>Name: </strong>@item.Name</h4>
        </div>
        <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
            <div class="col-3 col-sm-3 col-md-6 text-md-center" style="padding-top: 30px">
                <h6>
                    <strong>@item.price<span class="text-muted"> VND</span></strong>
                </h6>
            </div>
            <div class="col-3 col-sm-3 col-md-6 text-md-center" style="padding-top: 30px">
                <h6>
                    <strong>Quantity: @item.quantity x @item.price<span class="text-muted"></span></strong>
                </h6>
            </div>
        </div>
    </div>
}